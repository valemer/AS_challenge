<launch>
    <!-- OctoMap Server -->
    <node pkg="octomap_server" type="octomap_server_node" name="octomap_server" output="screen">
        <param name="frame_id" value="world" /> <!-- Fixed frame for the map -->
        <param name="resolution" value="2.0" /> <!-- Voxel resolution in meters -->
        <param name="sensor_model_hit" value="0.9" /> <!-- hit accuracy -->
        <remap from="cloud_in" to="/camera/depth/points" /> <!-- Input point cloud topic -->
    </node>
</launch>